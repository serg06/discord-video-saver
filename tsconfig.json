{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "esnext.asynciterable",
      "esnext" // not sure if this is okay with discord.ts
    ],
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.py", "**/*.txt"],
  "exclude": [
    "node_modules",
    "build"
  ]
}
